<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment">

    <EditText
        android:id="@+id/et_login_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:hint="手机/账号"
        android:fontFamily="@font/textsize"
        android:inputType="phone"
        android:padding="20dp" />

    <EditText
        android:id="@+id/et_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_number"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/textsize"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="20dp" />

    <CheckBox
        android:id="@+id/cb_rm_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_pass"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/textsize"
        android:text="记住密码?" />

    <TextView
        android:id="@+id/tv_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_rm_pass"
        android:layout_alignParentRight="true"
        android:layout_marginTop="46dp"
        android:layout_marginRight="0dp"
        android:clickable="true"
        android:fontFamily="@font/textsize"
        android:text="忘记密码？"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:background="@drawable/color_selector"
        android:textSize="40dp"
        android:fontFamily="@font/textsize"
        android:text="登            录"
        android:textColor="@color/white"
        />
</RelativeLayout>